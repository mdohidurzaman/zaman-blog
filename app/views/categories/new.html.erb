<div class="container">
 <div class="row">
  <div class="col-md-8 offset-md-2">
   <h1 class="align-center text-center">Create new category</h1>
  </div>
 </div>

</div>

<%= render 'shared/errors', obj: @category %>

   <div class="row">
       <div class="col-md-8 offset-md-2">
    <%= form_for @category do |f| %>
   <div class="form-group row">
       <div class="col-md-2 heading">
           <%= f.label :name, class: 'heading' %> 
       </div>
      <div class="col-md-10">
          <%= f.text_field :name, class: "form-control", placeholder: "Enter category name" %> 
       </div>
   </div>
  <div class="form-group row">
       <div class="col-md-8 offset-2">
           <%= f.submit class: "btn btn-primary btn-lg" %>
       </div>
   </div>

    <% end %>
           <div class="row justify-content-end">
               <div class="col-md-6 offset-md-3">
                   <div class="back_button">
                      [ <%= link_to 'Cancel request and return to article listing', articles_path %> ]
                   </div>
               </div>
           </div>    
       </div>
   </div>
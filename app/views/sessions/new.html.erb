<div class="container">
    <div class="row">
        <div class="col-md-10 offset-1">
            <h1 class="align-center text-center">Log in</h1>
        </div>
    </div>
     <div class="row">
         
        <div class="col-md-8 offset-md-2">
    <%= form_for :session, url: login_path do |f| %>
   <div class="form-group row">
       <div class="col-md-2 heading">
           <%= f.label :email, class: 'heading' %> 
       </div>
      <div class="col-md-10">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %> 
       </div>
   </div>
    <div class="form-group row">
       <div class="col-md-2 heading">
           <%= f.label :password, class: 'heading' %>
       </div>
   
       <div class="col-md-10">
          <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %> 
       </div>
   </div>
  <div class="form-group row">
       <div class="col-md-8 offset-2">
           <%= f.submit 'Log in', class: "btn btn-primary btn-lg" %>
       </div>
   </div>

    <% end %>
           <div class="row justify-content-end">
               <div class="col-md-6 offset-md-3">
                   <div class="back_button">
                      [ <%= link_to 'Cancel request and return to article listing', articles_path %> ]
                   </div>
               </div>
           </div>    
       </div>
        
    </div>
</div>